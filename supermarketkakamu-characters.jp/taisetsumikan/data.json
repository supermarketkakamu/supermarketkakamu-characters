    {
      "image_id": "021",
      "text": ""
    },
    {
      "image_id": "022",
      "text": "ふぅぅぅ\n楽しくも忙しい毎日に\nみかんのかわはクタクタです"
    },
    {
      "image_id": "023",
      "text": "でもそのぶん\nみかんのかわの想いは\nしっかり届いているようです"
    },
    {
      "image_id": "024",
      "text": "秋がきて\nみかんたちもだんだん\n色づいてきました"
    },
    {
      "image_id": "025",
      "text": "その成長に\nみかんのかわは\nとてもうれしい\nきもちになりました"
    },
    {
      "image_id": "026",
      "text": "でも冬がきて\nたいへんなことが\nおきました"
    },
    {
      "image_id": "027",
      "text": "寒さで\nみかんたちの\n元気がありません"
    },
    {
      "image_id": "028",
      "text": "みかんのかわは\nみかんたちを暖めること\nしかできません"
    },
    {
      "image_id": "029",
      "text": "さらに雪が強くなり\nだんだんみかんのかわの\n体力もうばっていきます"
    },
    {
      "image_id": "030",
      "text": "それでも\n暖めつづけた\nみかんのかわに\nもう力は残って\nいませんでした"
    },
    {
      "image_id": "031",
      "text": "うすれゆく意識の中で\nみかんたちとの思い出と\nくやしさがこみあげました"
    },
    {
      "image_id": "032",
      "text": "それから\nしばらくして\nようやく暖かな朝が\nおとずれました"
    },
    {
      "image_id": "033",
      "text": "んぐぐぐ…"
    },
    {
      "image_id": "034",
      "text": "ふんんんぐぐっっっ…！"
    },
    {
      "image_id": "035",
      "text": "バァーーーーン！！！\n寒さをのりこえた\nみかんたちの\nはじける元気さが\nみかんのかわを\n目覚めさせました"
    },
    {
      "image_id": "036",
      "text": "寒さに負けないよう\nたっぷりの愛をたくわえ\nたくましく成長した\nみかんたちの姿をみて\nみかんのかわは\n涙があふれました"
    },
    {
      "image_id": "037",
      "text": "みかんのかわは\nいつまでもたいせつに\nぎゅっとだきしめました"
    },
    {
      "image_id": "038",
      "text": "おしまい"
    }
  ]
